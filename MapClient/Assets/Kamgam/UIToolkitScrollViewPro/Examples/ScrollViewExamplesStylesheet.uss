}
*/

/* Button */
.unity-button
{
    font-size: 32px;
    color: #ffffff;
    background-color: #148DBE;
    border-color: #148DBE;
    border-radius: 10px; 
}

.unity-button:hover
{
    border-color: #148DBE;
    background-color: #48CFEf;
}

/* DropDown */
.unity-popup-field__input
{
    border-radius: 20px;
    background-color: #888;
    border-color: #888;

    color: white;
    -unity-font-style: bold;
}

.unity-popup-field__input:hover,
.unity-popup-field__input:focus 
{
    border-color: #999999;
    background-color: #999999;
}

.unity-base-dropdown__container-outer
{
    border-width: 0px;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

.unity-base-dropdown__container-inner
{
    background-color: white;
}

.unity-base-dropdown__item .unity-label
{
    font-size: 32px;
}

